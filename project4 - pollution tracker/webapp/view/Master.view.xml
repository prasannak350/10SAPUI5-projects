<mvc:View controllerName="com.sap.project4.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:f="sap.f">

	<!-- learnt something new about DynamicPage -->
    <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Countries Wise Pollution"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<VBox fitContainer="true">
			 	<Table
					id="countriesPollutionTable"
					inset="false"
					items="{countries>/}"
					class="sapFDynamicPageAlignContent"
					width="auto">
					<columns>
						<Column width="12em">
							<Text text="Country"/>
						</Column>
						<Column	hAlign="End">
							<Text text="AQI"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press="onCountryPress">
							<cells>
								<ObjectIdentifier title="{countries>name}" text="{countries>AQI}"/>
								<ObjectNumber
									number="{countries>AQI}"
									/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</f:content>

		
	</f:DynamicPage>
</mvc:View>