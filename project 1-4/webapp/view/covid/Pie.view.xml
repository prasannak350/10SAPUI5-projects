<mvc:View controllerName="com.sap.project1tiles.controller.covid.Pie"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:grid="sap.ui.layout.cssgrid" xmlns:core="sap.ui.core" xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data" height="100%">
    <Page id="pie" showHeader="false">
        <!-- learnt something new about viz frame charts -->

        <viz:Popover id="idPopOverPie"></viz:Popover>
            <viz:VizFrame id="idVizFramePie" uiConfig="{applicationSet:'fiori'}"
                height='100%' width="100%" vizType='pie'>
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{/data/regional}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition name="loc"
                                value="{loc}" />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="totalConfirmed"
                                value="{totalConfirmed}" />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>

                <viz:feeds>
                    <viz.feeds:FeedItem id='valueAxisFeedPie' uid="size" type="Measure"
                        values="totalConfirmed" />
                    <viz.feeds:FeedItem id='categoryAxisFeedPie' uid="color" type="Dimension"
                        values="loc" />
                </viz:feeds>
            </viz:VizFrame>
    </Page>
</mvc:View>